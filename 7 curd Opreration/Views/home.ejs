<!DOCTYPE html>
<html lang="en">

<head>
    <title>Home</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            width: 100%;
            height: 100%;
            margin: 0;
            padding: 20px;
            box-sizing: border-box;
        }

        /* MAIN WRAPPER */
        .container {
            display: flex;
            justify-content: center;
            /* poora center me */
            align-items: flex-start;
            /* dono top se start */
            gap: 40px;
            /* beech ka spacing */
            width: 100%;
        }

        button,
        input[type="button"],
        input[type="submit"] {
            padding: 10px 20px;
            background: #ffffff;
            /* pure white */
            border: 2px solid #dcdcdc;
            /* soft border */
            border-radius: 8px;
            /* smooth corners */
            font-size: 16px;
            cursor: pointer;
            font-weight: 600;
            transition: all 0.2s ease;
            /* smooth animation */
            box-shadow: 0px 3px 8px rgba(0, 0, 0, 0.08);
        }

        button:hover,
        input[type="button"]:hover,
        input[type="submit"]:hover {
            background: #f5f5f5;
            /* subtle hover */
            transform: translateY(-2px);
            /* lift effect */
            box-shadow: 0px 5px 12px rgba(0, 0, 0, 0.12);
        }

        button:active,
        input[type="button"]:active,
        input[type="submit"]:active {
            transform: translateY(1px);
            /* press down */
            box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.10);
        }

        table {
            border-collapse: collapse;
        }

        td,
        th {
            padding: 8px 12px;
        }

        table,
        th,
        td {
            border: 1px solid black;
        }
    </style>
</head>

<body>
    <h1 align="center">Home</h1>
    <!-- <h1>Hello ðŸ‘‹ <%= name %>
    </h1>
    <h2>Welcome To <% if(isAdmin) {%> ADMIN Penel <%} else {%> User <%}%>
    </h2> -->

    <!-- Add User  -->
    <div class="container">

        <!-- LEFT FORM -->
        <form method="POST" action="/addUser">
            <table cellspacing="5" cellpadding="5">
                <tr>
                    <td>Name : </td>
                    <td><input type="text" name="Name" placeholder="Enter Your Name.."></td>
                </tr>
                <tr>
                    <td>Email : </td>
                    <td><input type="email" name="Email" placeholder="Enter Your Email.."></td>
                </tr>
                <tr>
                    <td>Password : </td>
                    <td><input type="password" name="Password" placeholder="Enter Your Password.."></td>
                </tr>
                <tr>
                    <td>Phone : </td>
                    <td><input type="number" name="Phone" placeholder="Enter Your Phone Number.."></td>
                </tr>
                <tr>
                    <td>Address : </td>
                    <td><textarea name="Address" placeholder="Enter Your Address..."></textarea></td>
                </tr>
                <tr>
                    <td>Age : </td>
                    <td><input type="number" name="Age" placeholder="Enter Your Age.."></td>
                </tr>
                <tr>
                    <td>Add</td>
                    <td><input type="submit" value="Add"></td>
                </tr>
            </table>
        </form>

        <!-- RIGHT TABLE -->
        <table cellpadding="10">
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Email</th>
                <th>Password</th>
                <th>Phone Num</th>
                <th>Address</th>
                <th>Age</th>
            </tr>

            <% allUsers.map((User , index)=>{ %>
                <tr>
                    <td>
                        <%= User.Id %>
                    </td>
                    <td>
                        <%= User.Name %>
                    </td>
                    <td>
                        <%= User.Email %>
                    </td>
                    <td>
                        <%= User.Password %>
                    </td>
                    <td>
                        <%= User.Phone %>
                    </td>
                    <td>
                        <%= User.Address %>
                    </td>
                    <td>
                        <%= User.Age %>
                    </td>
                </tr>
                <% }) %>
        </table>

    </div>
</body>

</html>