<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>To Do List</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/remixicon@4.7.0/fonts/remixicon.css" />
    <link rel="stylesheet" href="dist/style.css">
</head>

<body>
    <div class="container">
        <div class="header">
            <h1>Today's Task</h1>
            <p>Wednesday, 11 May</p>
        </div>

        <div class="add-task-section">
            <form method="post" action="/AddTask" class="add-task-form">
                <div class="form-row">
                    <div class="form-group">
                        <input type="text" name="Todaytask" required placeholder="Task name">
                    </div>
                    <div class="form-group">
                        <input type="text" name="TaskDetails" required placeholder="Task description">
                    </div>
                </div>

                <div class="bottom-row">
                    <div class="form-group time-input-group">
                        <input type="time" name="StartTime" required>
                        <span style="color: #9e9e9e;">to</span>
                        <input type="time" name="EndTime" required>
                    </div>
                    <button type="submit" class="add-btn">
                        <i class="ri-add-line"></i> New Task
                    </button>
                </div>
            </form>
        </div>

        <div class="tasks-section">
            <% if (Task.length===0) { %>
                <div class="empty-state">
                    <i class="ri-checkbox-circle-line"></i>
                    <p>No tasks yet. Add one to get started!</p>
                </div>
                <% } else { %>
                    <% Task.forEach((task)=> { %>
                        <div class="task-item <%= task.completed ? 'completed' : '' %>" id="task-<%= task.Id %>">
                            <div class="task-header">
                                <div class="task-content">
                                    <div class="task-title">
                                        <%= task.Todaytask %>
                                    </div>
                                    <div class="task-details">
                                        <%= task.TaskDetails %>
                                    </div>
                                    <div class="task-time">
                                        <i class="ri-time-line"></i>
                                        Today <%= task.StartTime %> - <%= task.EndTime %>
                                    </div>
                                </div>
                                <div class="task-actions">
                                    <a href="/check?id=<%= task.Id %>">
                                        <button class="action-btn check-btn" title="Mark as complete">
                                            <i style="font-size: 25px;"
                                                class="<%= task.completed ? 'ri-checkbox-circle-fill' : 'ri-checkbox-circle-line' %>"></i>
                                        </button>
                                    </a>
                                    <a href="/update?id=<%= task.Id %>">
                                        <button class="action-btn edit-btn" title="Edit task">
                                            <i class="ri-edit-line"></i>
                                        </button>
                                    </a>
                                    <a href="/delete?id=<%= task.Id %>">
                                        <button class="action-btn delete-btn" title="Delete task">
                                            <i class="ri-delete-bin-6-line"></i>
                                        </button>
                                    </a>
                                </div>
                            </div>
                        </div>
                        <% }); %>
                            <% } %>
        </div>
    </div>
</body>

</html>